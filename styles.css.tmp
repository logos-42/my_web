/* 基本样式 */
body {
    font-family: "PingFang SC", "Helvetica Neue", Helvetica, Arial, sans-serif;
    line-height: 1.8;
    margin: 0;
    padding: 0;
    background-color: #fdf6e3;
    color: #333;
}

/* Essays页面布局 */
.essays-page {
    background-color: #fdf6e3;
    color: #333;
    line-height: 1.8;
    margin: 0;
    padding: 0;
}

.layout {
    display: flex;
    min-height: 100vh;
    max-width: 1200px;
    margin: 0 auto;
}

/* 主要内容区域 */
.content {
    margin-left: 280px;
    padding: 40px 40px 40px 20px;  /* 减小左侧padding */
    max-width: 800px;
    background-color: #fdf6e3;
    transition: margin-left 0.3s ease;
}
